<Window x:Class="WourHourTracking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WourHourTracking"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <StackPanel
         Margin="5"
         DockPanel.Dock="Top"
         Orientation="Horizontal">

            <Label
             x:Name="header"
             Width="Auto"
             Height="50"
             MinWidth="200"
             Margin="10" />

            <Button
                x:Name="createEntryButton"
             Width="auto"
             Height="30 "
             HorizontalAlignment="Right"
             Click="CreateNewTimeEntry"
             Content="Neuer Eintrag" />

            <Label
             x:Name="tester"
             Width="Auto"
             Height="50"
             MinWidth="200"
             Margin="10" />

        </StackPanel>


        <TextBox
         x:Name="dayNotes"
         Height="100"
         DockPanel.Dock="Top"
        />

        <DataGrid ItemsSource="{Binding Source=TimeEntries}">
           
        </DataGrid>
    </DockPanel>
</Window>
